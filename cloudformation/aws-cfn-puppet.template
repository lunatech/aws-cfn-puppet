		"ImageId" : { "Fn::FindInMap" : [ "AWSRegionArch2AMI", { "Ref" : "AWS::Region" },
						  { "Fn::FindInMap" : [ "AWSInstanceType2Arch", { "Ref" : "FEInstanceType" },
									"Arch" ] } ] },
		"SecurityGroups" : [ { "Ref" : "FESecurityGroup" } ],
		"InstanceType" : { "Ref" : "FEInstanceType" },
		"UserData" : { 
