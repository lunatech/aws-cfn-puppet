				"make" : [],
				"rubygems" : []
			    },
			    "rubygems" : {
				"json" : []
			    }
			},
			"files" : {
			    "/etc/puppet/puppet.conf" : {
				"content" : { "Fn::Join" : ["", [
				    "[main]\n",
